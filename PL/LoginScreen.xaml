<Window x:Class="PL.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        Title="MainWindow" Height="600" Width="1000"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Border Background="#EADBC8" CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Rectangle Width="1000" Height="600" Grid.ColumnSpan="2" RadiusX="20" RadiusY="20">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="images/Background.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Border Background="{DynamicResource StrongBeige}" CornerRadius="20" Grid.Column="1">
                <StackPanel>
                    <Image Source="images/LogoLogin.png" MaxWidth="200" Margin="0,40,0,0"/>
                    <Label Content="Welcome" HorizontalAlignment="Center" FontSize="45" Margin="0,30,0,0" FontFamily="Fonts/#Playfair Display Regular" Foreground="#0F2C59"/>
                    <TextBox Height="40" Width="190" Margin="10" Style="{StaticResource ModernTB}" FontFamily="Fonts/#Playfair Display Regular" FontSize="14" ToolTip="Username:"/>
                    <TextBox Height="40" Width="190" Margin="10" Style="{StaticResource ModernTB}" FontFamily="Fonts/#Password" FontSize="14" ToolTip="Password:" />
                    <Button Content="Sign In" Height="40" Width="190" Margin="20" Style="{StaticResource ModernBTN}" FontFamily="Fonts/#Playfair Display Regular" FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
