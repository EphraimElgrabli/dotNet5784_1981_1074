<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ListViewItem" x:Key="TaskCard">
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{DynamicResource BoldBlue}"/>
            </Trigger>
        </Style.Triggers>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{DynamicResource LightBeige}"
                        Width="200"
                        CornerRadius="10"
                        Margin="2,8,2,8"
                        x:Name="Border">
                        <StackPanel Orientation="Vertical"
                                Margin="0,10,0,10">
                            <Border Width="40" Height="40" CornerRadius="30" Background="{DynamicResource BoldBlue}" HorizontalAlignment="Center"/>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <Label Content="{Binding Name}" FontFamily="{DynamicResource Playfair Regular}" FontSize="22" FontWeight="ExtraBold" Foreground="{DynamicResource BoldBlue}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                <Label Content="{Binding Level}" FontFamily="{DynamicResource Playfair Italic}" FontSize="12" FontWeight="Thin" Foreground="{DynamicResource GreenTexture}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource MidBeige}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>